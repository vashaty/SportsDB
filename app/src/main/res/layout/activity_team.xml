<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:background="#0c3114">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|left"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/activity_team_image"
            android:layout_width="0dp"

            android:layout_weight="1"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:src="@drawable/ic_action_favs" />

        <TextView
            android:id="@+id/activity_team_label"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="100dp"
            android:maxWidth="120dp"
            android:gravity="center"
            android:text="No Signal"
            android:autoSizeStepGranularity="10sp"
            android:textColor="@color/white"
            android:autoSizeTextType="uniform" />

        <ImageButton
            android:layout_weight="0"
            android:scaleType="fitCenter"
            android:id="@+id/activity_team_fav_button"
            android:layout_width="35dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_action_favs"
            android:background="@android:color/transparent" />
    </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/activity_team_view_upcoming"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#051a0a">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="Upcoming Events"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_marginBottom="5dp"/>

         </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/activity_team_view_latest"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#051a0a">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="Latest Results"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginBottom="5dp"/>


    </LinearLayout>





    </LinearLayout>
    <!-- everything you already have -->
</ScrollView>