        >

        <ImageView
            android:id="@+id/activity_team_image"
            android:layout_width="wrap_content"
            android:layout_weight="10"
            android:layout_height="116dp"
            android:gravity="center_vertical"
            android:src="@drawable/ic_action_favs" />

        <TextView
            android:id="@+id/activity_team_label"
            android:layout_width="wrap_content"
            android:layout_weight="8"
            android:layout_height="100dp"
            android:maxWidth="120dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Tampa bay lightning"
            android:autoSizeStepGranularity="10sp"
            android:textColor="@color/white"
            android:autoSizeTextType="uniform" />

        <ImageButton
            android:layout_weight="0"
            android:id="@+id/activity_team_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_favs" />
    </LinearLayout>



